<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/BG">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <EditText
                android:id="@+id/et_email"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:backgroundTint="#878787"
                android:textColor="@color/white"
                android:hint="이메일"
                android:textColorHint="#878787"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_pw1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:backgroundTint="#878787"
                android:hint="비밀번호"
                android:textColor="@color/white"
                android:textColorHint="#878787"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_pw2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pw1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:backgroundTint="#878787"
                android:hint="비밀번호 확인"
                android:textColor="@color/white"
                android:textColorHint="#878787"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="#878787"
                android:ems="10"
                android:hint="닉네임"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="#878787"
                android:textSize="20sp" />

            <!-- chipGroup 들을 담을 레이아웃 -->
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                android:paddingTop="40dp">

                <!--chipGroup - EI -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupEI"
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    >
                    <com.google.android.material.chip.Chip
                        android:id="@+id/btn_e"
                        android:layout_width="101dp"
                        android:layout_height="67dp"
                        android:background="@android:color/transparent"
                        android:paddingRight="20dp"
                        android:textAlignment="center"
                        android:text="E"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/btn_i"
                        android:layout_width="101dp"
                        android:layout_height="67dp"
                        android:background="@android:color/transparent"
                        android:paddingRight="20dp"
                        android:textAlignment="center"
                        android:text="I"
                        />
                </com.google.android.material.chip.ChipGroup>

                <!--chipGroup - SN -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupSN"
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    >
                    <com.google.android.material.chip.Chip
                        android:id="@+id/btn_s"
                        android:layout_width="101dp"
                        android:layout_height="67dp"
                        android:background="@android:color/transparent"
                        android:paddingRight="20dp"
                        android:textAlignment="center"
                        android:text="S"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/btn_n"
                        android:layout_width="101dp"
                        android:layout_height="67dp"
                        android:background="@android:color/transparent"
                        android:paddingRight="20dp"
                        android:textAlignment="center"
                        android:text="N"
                        />
                </com.google.android.material.chip.ChipGroup>

                <!--chipGroup - TF -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupTF"
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    >
                    <com.google.android.material.chip.Chip
                        android:id="@+id/btn_t"
                        android:layout_width="101dp"
                        android:layout_height="67dp"
                        android:background="@android:color/transparent"
                        android:paddingRight="20dp"
                        android:textAlignment="center"
                        android:text="T"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/btn_f"
                        android:layout_width="101dp"
                        android:layout_height="67dp"
                        android:background="@android:color/transparent"
                        android:paddingRight="20dp"
                        android:textAlignment="center"
                        android:text="F"
                        />
                </com.google.android.material.chip.ChipGroup>

                <!--chipGroup - JP -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupJP"
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    >
                    <com.google.android.material.chip.Chip
                        android:id="@+id/btn_j"
                        android:layout_width="101dp"
                        android:layout_height="67dp"
                        android:background="@android:color/transparent"
                        android:paddingRight="20dp"
                        android:textAlignment="center"
                        android:text="J"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/btn_p"
                        android:layout_width="101dp"
                        android:layout_height="67dp"
                        android:background="@android:color/transparent"
                        android:paddingRight="20dp"
                        android:textAlignment="center"
                        android:text="P"
                        />
                </com.google.android.material.chip.ChipGroup>

            </TableLayout>

            <!-- 등록 버튼 -->
            <ImageButton
                android:id="@+id/btn_register"
                android:layout_width="160dp"
                android:layout_height="67dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/registerbutton"
                android:layout_marginBottom="50dp"
                android:clickable="true"
                />
        </LinearLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>