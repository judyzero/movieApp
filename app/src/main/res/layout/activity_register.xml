<?xml version="1.0" encoding="utf-8"?>

<!-- 회원가입 - mbti -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mbti"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="#242A32" >

    <!-- title -->
    <TextView
        android:id="@+id/회원가입"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="121dp"
        android:text="회원가입"
        android:textSize="40dp"
        android:fontFamily="@font/dalseo_darling"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        />



    <!-- email -->
    <!--fontFamily : 폰트 바꾸기-->
    <!--textColorHint : 힌트 색 바꾸기-->
    <!--backgroundTint : 입력창 밑줄 색 바꾸기-->
    <EditText
        android:id="@+id/입력_이메일"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/회원가입"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:backgroundTint="#878787"
        android:fontFamily="@font/dalseo_darling"
        android:hint="이메일"
        android:textColorHint="#878787"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/입력_비밀번호"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/입력_이메일"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:backgroundTint="#878787"
        android:fontFamily="@font/dalseo_darling"
        android:hint="비밀번호"
        android:textColorHint="#878787"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/입력_비밀번호_확인"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/입력_비밀번호"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:backgroundTint="#878787"
        android:fontFamily="@font/dalseo_darling"
        android:hint="비밀번호 확인"
        android:textColorHint="#878787"
        android:textSize="20sp" />


<!--    버튼 배경색 바꾸려면 아래 태그 써야함.-->
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/입력_비밀번호_확인"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/register_nextbtn"
        />

</RelativeLayout>
