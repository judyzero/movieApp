<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/BG">

    <!-- title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="121dp"
        android:text="회원가입"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        />



    <!-- email -->
    <!--fontFamily : 폰트 바꾸기-->
    <!--textColorHint : 힌트 색 바꾸기-->
    <!--backgroundTint : 입력창 밑줄 색 바꾸기-->
    <EditText
        android:id="@+id/et_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:backgroundTint="#878787"
        android:hint="이메일"
        android:textColorHint="#878787"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_pw1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#878787"
        android:hint="비밀번호"
        android:textColorHint="#878787"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_pw2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_pw1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#878787"
        android:hint="비밀번호 확인"
        android:textColorHint="#878787"
        android:textSize="20sp" />


    <ImageButton
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/et_pw2"
        android:id="@+id/btn_next"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/register_nextbtn"
        />

</RelativeLayout>