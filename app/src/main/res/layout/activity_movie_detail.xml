<?xml version="1.0" encoding="utf-8"?>

<!-- 회원가입 - mbti -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mbti"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="#242A32" >


    <!-- 헤더 -->
    <RelativeLayout
        android:id="@+id/header_wrap"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        >
        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/icon_back"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/common_backbtn"
            />

        <!--마이페이지-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:text="영화 상세"

            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>

    <!-- 중앙 콘텐트 -->
    <LinearLayout
        android:id="@+id/body_wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@id/navbar_line"
        android:layout_below="@id/header_wrap"
        android:orientation="vertical">

        <!--포스터-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:src="@drawable/movie_minari"
                />
        </LinearLayout>

        <!--제목/별점/간단정보/버튼-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <!--제목-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="스파이더맨 : 노웨이 홈"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />
            <!--별점 레이아웃 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">
                <!--별-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/star" />
                <!--별점의 숫자-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" 9.5"
                    android:textAlignment="center"
                    android:textColor="#FF8700"
                    android:textSize="20dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                >
                <!--개봉일/상영시간/장르-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <!--개봉일-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/calender" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=" 2021"
                        android:textAlignment="center"
                        android:textColor="#92929D"
                        android:textSize="22dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/line" />
                    <!--상영시간-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/clock" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=" 148분  "
                        android:textAlignment="center"
                        android:textColor="#92929D"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/line" />

                    <!--장르-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ticket" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=" 액션"
                        android:textAlignment="center"
                        android:textColor="#92929D"
                        android:textSize="19dp" />
                </LinearLayout>

            </RelativeLayout>
            <!--버튼-->
            <ImageButton
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/detail_btn_gotomyreview"
                />

        </LinearLayout>

        <!-- 줄거리/감독/배우 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            >
            <!--줄거리-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="‘미스테리오’의 계략으로 세상에 정체가 탄로난 스파이더맨 ‘피터 파커’는 하루 아침에 평범한 일상을 잃게 된다. 문제를 해결하기 위해 ‘닥터 스트레인지’를 찾아가 도움을 청하지만 뜻하지 않게 멀티버스가 열리면서 각기 다른 차원의 불청객들이 나타난다. ‘닥터 옥토퍼스’를 비롯해 스파이더맨에게 깊은 원한을 가진 숙적들의 강력한 공격에 ‘피터 파커’는 사상 최악의 위기를 맞게 되는데…"
                android:textColor="@color/white"
                android:textSize="13dp"
                />
            <!--갇독-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="감독 : 조 펄맨, 에란 크리비, 케이시 패터슨.."
                android:textColor="@color/white"
                android:textSize="13dp"
                 />
            <!--출연배우-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="배우 : 다니엘 래드클리프, 루퍼트 크린트, 엠마 왓슨..."
                android:textColor="@color/white"
                android:textSize="13dp"
                />


        </LinearLayout>

    </LinearLayout>



    <!-- 네브바 구분선-->
    <ImageView
        android:id="@+id/navbar_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@id/nav_wrap"
        android:src="@drawable/navbar_line" />
    <!-- 하단 네브바 -->
    <LinearLayout
        android:id="@+id/nav_wrap"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <!--영화검색-->
            <ImageButton
                android:id="@+id/navbar_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"

                android:background="#242A32"
                android:src="@drawable/navbar_selected_search" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <!--홈-->
            <ImageButton
                android:id="@+id/navbar_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"

                android:background="#242A32"
                android:src="@drawable/navbar_home" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <!--나의 감상평-->
            <ImageButton
                android:id="@+id/navbar_myreview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"

                android:background="#242A32"
                android:src="@drawable/navbar_myreview" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <!--영화검색-->
            <ImageButton
                android:id="@+id/navbar_mypage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"

                android:background="#242A32"
                android:src="@drawable/navbar_mypage" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>